
@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title BusinessTripApplication</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body> 
    <div class="index-background">
        
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous">
       
        
        <div class="card " style="position:relative; float:left; margin-left:20%; width:20%; margin-top:20%; ">

            <div class="card-body">
                <div>
                    <i class="fas fa-user-plus fa-x" style="color:#0095D6; font-size:10em; margin-left:15%; "></i>
                </div>
                <div class="button">
                    @Html.ActionLink("Sign Up", "Registration", "User", "User", new { @class = "btn btn-primary btn-lg " })
                </div>
            </div>
        </div>
   
          
        <div class="card "style="width:20%; float:right; margin-right:20%; margin-top:20%;" >

            <div class="card-body">
                <div>
                    <i class="fas fa-sign-in-alt" style="color:#0095D6; font-size:10em; margin-left:15%; "></i>
                </div>
                <div class="button">
                    @Html.ActionLink("Sign In", "LogIn", "User", "User", new { @class = "btn btn-primary btn-lg" })
                </div>
            </div>
        </div>
   
        

    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

</body>
</html>